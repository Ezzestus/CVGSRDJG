@model VideoGameStore.Models.User_Address

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@this.User.Identity.Name's Address</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Address.street_address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address.street_address)<br />
            @Html.DisplayFor(model => model.Address.city) @Html.DisplayFor(model => model.Address.Province.province_code)<br />
            @Html.DisplayFor(model => model.Address.postal_code)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
