@model IEnumerable<VideoGameStore.Models.User_Address>

@{
    ViewBag.Title = "Index";
}

<h2>@this.User.Identity.Name's Addresses</h2>

<p>
    @Html.ActionLink("Create New", "CreateUserAddress", "Addresses", null, null)
</p>
<table class="table">
    <tr>                        
        <th>
            @Html.DisplayNameFor(model => model.Address.street_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address_name)
        </th>
 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.Address.street_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address_name)
        </td>
        <td>           
            <p>@Html.ActionLink("Delete", "Delete", new { id = item.address_id })</p>
        </td>
    </tr>
}

</table>
