
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>
<p class="text-danger">@TempData["Message"]</p>
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm())
    {
    <div class="form-group">       
        <h3>Address</h3>
        @if (ViewBag.numAddresses > 0)
        {
            @Html.DropDownList("address_id", null, htmlAttributes: new { @class = "form-control" })
            }        
        <p style="margin-top: 1em;">@Html.ActionLink("Add A New Address", "CreateUserAddress", "Addresses", null, new { @class = "btn btn-success" })</p>
    </div>

    <div class="form-group">    
        <h3>Credit Card</h3>
        @if (ViewBag.numCards > 0)
        {
            @Html.DropDownList("credit_card_id", null, htmlAttributes: new { @class = "form-control" })
        }        
        <p style="margin-top: 1em;">@Html.ActionLink("Add A New Credit Card", "CreateUserCreditCard", "Credit_Card", null, new { @class = "btn btn-success" })
    </div>
    @*<div>
        @Html.Hidden("id", (int)ViewBag.user_id)
    </div>*@
    <div class="form-group">
        <div>
            <input type="submit" value="Checkout" class="btn btn-primary" />
        </div>
    </div>
    }
</div>

